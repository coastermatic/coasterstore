<div class="page-header">
  <h1>Register an account</h1>
</div>

<div class="account-wrapper">

  <div class="account-content">

    {% form 'create_customer' %}

      {% if form.errors %}
      <div>
        <p><span class="error">Oops, sorry.</span> We were unable to submit your registration because it contained {{ form.errors | size | pluralize: 'an error', 'a few errors' }}. Please correct the highlighted {{ form.errors | size | pluralize: 'field', 'fields' }} and submit again.</p>
      </div>
      {% endif %}

      <div class="input-wrapper first-name">
        <label for="customer[first_name]">First name</label>
        <input class="{% if form.errors contains "first_name" %}error{% endif %}" type="text" placeholder="" value="{{ form.first_name }}" name="customer[first_name]">
      </div>

      <div class="input-wrapper last-name">
        <label for="customer[last_name]">Last name</label>
        <input class="{% if form.errors contains "last_name" %}error{% endif %}" type="text" placeholder="" value="{{ form.last_name }}" name="customer[last_name]">
      </div>

      <div class="input-wrapper email">
        <label for="customer[email]">Email {% if form.errors contains "email" %}<span class="error">{{ form.errors.messages.email }}</span>{% endif %}</label>
        <input class="{% if form.errors contains "email" %}error{% endif %}" type="email" placeholder="your@email.com" value="{{ form.email }}" name="customer[email]">
      </div>

      <div class="input-wrapper password">
        <label for="customer[password]">Password {% if form.errors contains "password" %}<span class="error">{{ form.errors.messages.password }}</span>{% endif %}</label>
        <input class="{% if form.errors contains "password" %}error{% endif %}" type="password" placeholder="" value="" name="customer[password]">
      </div>

      <div class="input-wrapper">
        <input type="submit" value="Submit">
      </div>

    {% endform %}

  </div>
</div>