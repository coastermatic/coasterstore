}


.single-coaster #shortlist_info {
	float:right;
	width: 300px;
}

.single-coaster #shortlist_info h1 {
	z-index: 0;
	position: relative;
	text-align: left;
	width:inherit;
	margin-top: 45px;
}

.single-coaster p#msg-border {
	margin-top:0px;
	text-align: left;
	position: relative;
	z-index: 0px;
}

.single-coaster div#shortlist_container ul {
	width: 300px;
	float:left;
}

.single-coaster .cart-or-crop {
	margin-top: 75px;
	text-align: left
}

.single-coaster .cart-or-crop p#msg-border span{
	background-position: -90px -75px;
}

.single-coaster p#instagram-logged-in-as {
	margin: 0 0 0 0;
	text-align: left;
	line-height: 1.5;
	position: relative;
	width: 100%;
	z-index:0;
	font-size: 14px;
	}

#product.photo-upload #overlay {
  display: none;
  position: fixed;
  left: 0px;
  top: 0px;
  width:100%;
  height:100%;
  text-align:center;
  z-index: 1000;
  background: rgba(0,0,0,.5);
}

#product.photo-upload #overlay .modal {
  width:500px;
  margin:25px auto;
  background-color:#fff;
  padding:30px 50px 30px 50px;
  text-align:center;
}

#product.photo-upload .cropper-drag-box.cropper-modal {
  background-color: rgba(255,255,255,0.8) !important;
  opacity: 1;
}

#product.photo-upload span.cropper-view-box {
  border-radius: 50%;
  outline: none !important;
}

#product.photo-upload h1 {
	line-height: 1;
}

#product.photo-upload #crop-slider {
  width: 300px;
  height: 7px;
  margin: 20px auto 10px auto;
}
  
#product.photo-upload #crop-slider div.noUi-handle {
  border-radius: 25px;
  height: 25px;
  width: 25px;
  top: -10px;
  left: -10px;
  background-color: #dc1960;
  box-shadow: none;
}

#product.photo-upload #crop-slider div.noUi-handle:after, #crop-slider div.noUi-handle:before {
  background: none;
}

#product.photo-upload #images ul li {
  cursor: pointer;
}

