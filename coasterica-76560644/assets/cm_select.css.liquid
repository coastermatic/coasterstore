  #product.photo-upload div#shortlist_container.upload ul, #product.photo-upload div#shortlist_container.upload ul.pair { width: 100%; }
  /*#product.photo-upload div#shortlist_container a.crop.pencil { left:-10px !important; top:-10px !important; } */
  #product.photo-upload h1#select-image-count {
    margin: 0px auto 10px;
    position:relative;
    font-size: 35px;
  }

  #product.photo-upload div#shortlist_container a.crop.pencil {
	  background: url("{{ 'icon-pencil-med-mobile.svg' | asset_url }}") 0 0 no-repeat;
	}

	#product.photo-upload div#shortlist_container a.remove-link {
		background: url("{{ 'icon-remove-mobile.svg' | asset_url }}") 0 0 no-repeat;
	}

  #product.photo-upload h1#select-image-count.select-image-count-mid-selection {
    right: 0;
    width: 100%;
    margin: 0 auto 10px;
  }

  #product.photo-upload div#shortlist_container div#shortlist ul li {
	-webkit-box-shadow: 0px 0px 8px 0 #000;
	-moz-box-shadow: 0px 0px 8px 0 #000;
	box-shadow: 0px 0px 8px 0 #000;
	}

 #product.photo-upload div.internal-container { border-top: rgb(238,238,238) solid 1px; }

 #product.photo-upload p#msg-border {
 	    margin: 120px 0 0 0;
 }

  #product.photo-upload div#shortlist ul li, #product.photo-upload div#image_content li {
    margin:2%;
    width: 45%;
    height: 45%;
    padding-bottom:45%;
  }

  #product.photo-upload div#shortlist.circle ul li, #product.photo-upload div#image_content.circle li {
    border-radius:50%;
  }

  #product.photo-upload div#shortlist_container, #product.photo-upload div#shortlist_container div#shortlist{
  	z-index: 0px;
  	overflow: visible;
  }

  #product.photo-upload div#shortlist_container, #product.photo-upload div#shortlist_container ul {
    padding: 0;
    margin-bottom: 10px;
  }

  #product.photo-upload div#shortlist_container div#shortlist ul li {
    background-size:cover;
  }

  #product.photo-upload div#image_content li#choose-photo {
    margin: 0 0 0 27.5%;
  }

  #product.photo-upload #overlay {
    position: absolute;
  }

  #product.photo-upload #overlay .modal {
    width:100%;
    max-width:500px;
    margin:auto auto;
    background-color:#fff;
    padding:10px 15px 10px 15px;
    text-align:center;
  }

  #product.photo-upload h1 {
    margin: 0;
  }
}

@media (min-width: 1101px) {
  #product.photo-upload div#shortlist ul .breaker { display:none; }
}
