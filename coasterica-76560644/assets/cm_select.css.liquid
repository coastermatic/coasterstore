div.internal-container {
	margin: 0 auto;
	width: {{ settings.theme_width }};
}

#select {
	min-height: 400px;
	padding-bottom: 2.5em;
}

#select ul li {
	margin: 0 10px 12px;
	display: inline;
	float:left;
}

h1.loading, .loadingMore {
	color: #CCC;
	clear:both;
	text-align: center;
}

img.remove {z-index: 10; display:none; cursor:pointer;}

.circle {
	position:relative;
}

.cm_picker {
	overflow: auto;
}

.drawer div#selection-container {
	padding-left: 210px;
}

h1#select-image-count span {
	color: {{ settings.link-color }};
}

div#image_content li,
div.shortlist_confirmed ul li,
div#shortlist_confirmed ul.circle li {
	-webkit-box-shadow: 0px 0px 10px 0px #666;
	-moz-box-shadow: 0px 0px 10px 0px #666;
	box-shadow: 0px 0px 10px 0px #666;
	width:160px;
	height:160px;
}

li#choose-photo.start {
	margin: 0 0 0 43%;
}

h1#select-image-count {
	margin: 100px 0 0 0;
	z-index: 100;
	text-align: center;
	position: absolute;
	width: 100%;
}

h1#select-image-count.select-image-count-mid-selection {
	margin: 75px 0 0 0;
	color: #aaa;
	width: 200px;
	right: 56px;
}

h1#select-image-count.select-image-count-mid-selection span {
	color: {{ settings.link-color }};
}


p#instagram-logged-in-as {
	margin: 200px 0 0 0;
	text-align: center;
	line-height: 1.5;
	position: absolute;
	width: 100%;
	z-index:1;
	font-size: 14px;
	}

p#msg-border {
	margin: 155px 0 0 0;
	text-align: center;
	line-height: 1.5;
	position: absolute;
	width: 100%;
	z-index:1;
}

p#msg-border a {
	margin: 2em 0 0 0;
	display: block;
}

p#msg-border span {
	display: inline-block;
	position: relative;
	text-indent: -999em;
	margin: 0 2px;
	width: 22px;
	height: 22px;
	background: url('img-coaster-selection-control-icons.png') -6px -76px no-repeat;
	top: -1px;
}

#product.photo-upload p#msg-border span {
	background: url("{{ 'icon-pencil.svg' | asset_url }}") 0 0 no-repeat;
	background-size: 50px;
}


div#shortlist_container ul {
	overflow: auto;
	margin: 0 auto;
	/*width: 100%;*/
	width:1013px;
	padding: 10px;

/*
	Original values
	overflow: auto;
	padding: 10px 25px;
	margin: 0;

	w li float:left*/
}

div#shortlist_confirmed ul.circle li {
	background-size: 250px 250px;
}

div#shortlist_container div#shortlist ul li {
	-webkit-box-shadow: 0px 0px 10px 0 #000;
	-moz-box-shadow: 0px 0px 10px 0 #000;
	box-shadow: 0px 0px 10px 0 #000;
	background-size: 230px 230px;
	background-position: 0 0;
}

div#shortlist_container div#shortlist ul li.border-cropped {
	background-size: 255px 255px;
	background-position: -12.5px -12.5px;
}

div#image_content.circle li,
div.shortlist_confirmed.circle ul li,
div#shortlist_confirmed ul.circle li {
	border-radius: 150px;
	overflow: hidden;
}

/* This line was due to safari weird cropping issue */

div#image_content li img,
div.shortlist_confirmed ul li,
div#image_content.circle li img,
div.shortlist_confirmed.circle ul li {
	border-radius: 160px;
	width: 160px;
}

div#image_content {
	color: #999;
	/*margin-top: 250px;*/
}

div#image_content li:hover, div#image_content a.shortlisted li:hover,
ul#product-photo-thumbs li:hover {
	-webkit-box-shadow: 0px 0px 15px 0px {{ settings.select-hover-color }};
	-moz-box-shadow: 0px 0px 15px 0px {{ settings.select-hover-color }};
	box-shadow: 0px 0px 15px 0px {{ settings.select-hover-color }};
}

div#image_content li.shortlisted,
ul#product-photo-thumbs li.thumb-preview {
	-webkit-box-shadow: 0px 0px 15px 0px {{ settings.link-color }};
	-moz-box-shadow: 0px 0px 15px 0px {{ settings.link-color }};
	box-shadow: 0px 0px 15px 0px {{ settings.link-color }};
}


/* SHORTLIST */


/*h3#instagram-logged-in-as {
	text-align: center;
	margin: 2em auto;
	font-size: 1.5em;
}*/

div#shortlist_container {
	overflow: auto;
	background: #fff;
	padding: 10px 10px;
	z-index: 100;
	width: 100%;
/*	-webkit-box-shadow: 0px 0px 20px 0px #666;
	box-shadow: 0px 0px 20px 0px #666;
	*/
}

div#shortlist_container.border {
	border-bottom: 1px solid {{ settings.meta-color }};
}

div#shortlist_container div#shortlist {
	/*margin: -130px auto 0;*/
	margin:auto;
	overflow: auto;
	position: relative;
	/*width: {{ settings.min_body_width }}; */
	/*width: 1158px;  */
}


div#shortlist_container div#shortlist ul li.empty {
	-webkit-box-shadow: inset 0px 0px 40px 20px #ccc;
	-moz-box-shadow: inset 0px 0px 40px 20px #ccc;
	box-shadow: inset 0px 0px 40px 20px #ccc;
}

div#shortlist ul li {
	display:inline-block;
	margin: 0px 20px 0 0;
	position: relative;
	width: 230px;
	height: 230px;
}

div#shortlist ul li:last-child {
	margin: 0;
}

div#shortlist ul li.empty {
	background: #fff;
	opacity: .3;
}

div#shortlist.circle ul li {
	border-radius: 150px;
}

#shortlist ul li img {
	position:absolute;
	top:0;
	-webkit-box-shadow: 0px 0px 10px 0 #000;
	-moz-box-shadow: 0px 0px 10px 0 #000;
	box-shadow: 0px 0px 10px 0 #000;
}

#shortlist.circle ul li img {
	position:absolute;
	top:0;
	-webkit-box-shadow: 0px 0px 10px 0 #000;
	-moz-box-shadow: 0px 0px 10px 0 #000;
	box-shadow: 0px 0px 10px 0 #000;
	border-radius: 150px;
	width: 230px;
	height: 230px;
}

div#shortlist a#shortlist-next-step {
	text-align: center;
	display: block;
	text-transform: uppercase;
	letter-spacing: 4px;
	height: 34px;
	margin-top: 2em;
}

div#shortlist a#shortlist-next-step.enable,
ol#steps li.next-step.enable a {
	background: {{ settings.select-hover-color }};
	color: #fff;
}

/* selection crop & delete controls */

div#shortlist_container a.crop,
div#shortlist_container a.remove-link {
	text-indent: -999em;
	display: block;
	width: 48px;
	height: 48px;
	background: url("{{ 'img-coaster-selection-control-icons.png' | asset_url }}") 0 0 no-repeat;
}

div#shortlist_container a.remove-link {
	background-position: -70px 0;
}

div#shortlist_container a.crop.pencil {
  background: url("{{ 'icon-pencil-light.svg' | asset_url }}") 0 0 no-repeat;
}

div#shortlist_container li:hover a.crop.pencil {
  background: url("{{ 'icon-pencil-med.svg' | asset_url }}") 0 0 no-repeat;
}

div#shortlist_container li:hover a:hover.crop.pencil {
  background: url("{{ 'icon-pencil-dark.svg' | asset_url }}") 0 0 no-repeat;
}

a.remove-link {
	 position:absolute;
	 z-index:10;
	 right: 0;
}

div#shortlist_container ul.pair {width:525px;}

div#shortlist_container ul li:hover a.crop 				 { background-position: 0 -70px; }
div#shortlist_container ul li:hover a.remove-link  { background-position: -70px -70px; }

div#shortlist_container ul li a:hover.crop 				 { background-position: 0 -140px; }
div#shortlist_container ul li a:hover.remove-link  { background-position: -70px -140px; }

div#shortlist_container ul li a:active.crop 			 { background-position: 0 -210px; }
div#shortlist_container ul li a:active.remove-link { background-position: -70px -210px; }

div.cart-or-crop {
	text-align: center;
	background: #fff;
}

div#shortlist_container #shortlist.circle ul li img.remove {
	display: block;
	height: 25px;
	width: 25px;
	background: #918;
	-webkit-box-shadow: 0;
	-moz-box-shadow: 0;
	box-shadow: 0;
	border-radius: 0;
}

p.chromeframe {
  text-align: center;
  padding: 1em 0;
  background: {{ settings.select-hover-color }};
}

div#shop-url {
  display: none;
}

#add-to-cart {
	font-size: 25px;
}


