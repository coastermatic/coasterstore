/* Theme adjustments */
#isGift label {
  margin-bottom: 0;
}



/**************************** NEW CSS: Coaster Sets ****************************/

div#coaster-sets-column {
  width: 630px;
  float: left;
  overflow: auto;
}

div.coaster-set {
  background: url('img-background-yellow-tissue.png') 0 0 no-repeat;
  -webkit-border-radius: 15px;
  border-radius: 15px;
  margin: 0 0 30px 30px;
  width: 300px;
  padding: 0;
  float: left;
}

/*div#container div.coaster-set  ul.coaster-set-preview {
  padding: 15px 0 0 15px;
}*/
div.coaster-set ul, div.coaster-set li {
  margin:0;
}

div.coaster-set:first-child, div.coaster-set:nth-child(odd) {
  margin-left: 0;
}

div.coaster-set ul.coaster-set-preview {
  padding: 15px 0 0 15px;
  overflow: auto;
}

div.coaster-set ul.coaster-set-preview li,
div.coaster-set ul.coaster-set-preview li img {
  float: left;
  height: 130px;
  width: 130px;
	background-size: 130px 130px;
	background-position: 0 0;
}

div.coaster-set ul.coaster-set-preview li {
  -webkit-box-shadow: 0px 0px 10px 0px #666;
  -moz-box-shadow: 0px 0px 10px 0px #666;
  box-shadow: 0px 0px 10px 0px #666;
  border-radius: 150px;
  overflow: hidden;
}

div.coaster-set ul.coaster-set-preview li.single,
div.coaster-set ul.coaster-set-preview li.single img {
  float: left;
  height: 250px;
  width: 250px;
  background-size: 250px 250px;
  background-position: 0 0;
}

div.coaster-set ul.coaster-set-preview li.single {
  border-radius: 250px;
  margin: 10px 11px 25px;
}

div.coaster-set ul.coaster-set-preview li.single.border-cropped {
  background-size: 294px 294px;
  background-position: -14.5px -14.5px;
}


div.coaster-set ul.coaster-set-preview li.border-cropped {
	background-size: 153px 153px;
	background-position: -7.5px -7.5px;
}



div.coaster-set ul.coaster-set-preview li:nth-child(3),
div.coaster-set ul.coaster-set-preview li:nth-child(4) {
  margin: 10px 0 15px 0;
}

div.coaster-set ul.coaster-set-preview li:nth-child(odd) {
  margin-right: 10px;
}

div.coaster-set ul.coaster-set-controls {
  /*background: {{ settings.color_brown }};*/
  background: #eee;
  color: #fff;
  font-size: .9em;
  padding: 10px 15px;
  overflow: auto;
  -webkit-border-radius: 0 0 15px 15px;
  border-radius: 0 0 15px 15px;
}

div.coaster-set ul.coaster-set-controls label {
  font-weight: bold;
  opacity: .4;
  margin-right: 5px;
  margin-bottom:4px;
}
div.coaster-set ul.coaster-set-controls li {
  float: left;
}
div.coaster-set ul.coaster-set-controls li input {
  width: 35px;
  font-size: 1em;
  font-weight: bold;
  text-align: center;
	padding: 3px 0;
}
div.coaster-set ul.coaster-set-controls li.remove-link {
  float: right;
  font-size: .7em;
  margin-top: 9px;
}
div.coaster-set ul.coaster-set-controls li.remove-link a {
  background: url('img-icon-remove.png') 0 0 no-repeat;
  color: #fff900;
  display: block;
  width: 13px;
  height: 13px;
  text-indent: -999em;
	cursor: pointer;

  background-position: 0 -30px;
}

a.remove-link {
	/* TW added */
	 position:absolute;
	 z-index:10;
	 right: 0;

   background-position: 0 -30px;
}

