/* NEW CSS: Empty Coaster Sets */

div.empty-coaster-set {
  background: none;
  position:relative;
}

div.empty-coaster-set h2.list{
  position: absolute;
  width: 250px;
  line-height: 1;
  left: 25px;
  top: 50px;
  color: #555555;
}

div.empty-coaster-set a {
  background: #e6e6e6 url('img-empty-set.png') 50% 15px no-repeat;
  margin: 0 auto;
  -webkit-border-radius: 15px;
  border-radius: 15px;
  text-align: center;
  display: block;
  padding: 0px;
  padding-top: 300px;
  font-weight: bold;
}

div.empty-coaster-set a span {
  border-top: 1px solid #d8d8d8;
  display: block;
  text-decoration: underline;
  -webkit-border-radius: 0 0 15px 15px;
  border-radius: 0 0 15px 15px;
  padding: 15px 0;
  color: {{ settings.link_color }};
}

div.empty-coaster-set a:hover {
  background-color: #e2e2e2;
}

div.empty-coaster-set a:hover span {
  background: {{ settings.link_color }};
  color: #666666;
}

div.empty-coaster-set p {
	font-size: 1;
	line-height: 1.1;
  	margin:0;
}

button.btn {
  font-size: 2em;
  font-weight: bold;
  letter-spacing: 0;
  float: right;
}


section#cart {
	overflow: hidden;
	margin-bottom: 1.5em;
}

#cart form {
  margin:0;
}

div.cart-summary {
  width: 300px;
  float: right;
	font-size: 1.1em;
}

div.cart-summary h2 {
  color: #ccc;
  font-family: Times, serif;
  font-style: italic;
  font-weight: normal;
  border-bottom: 1px solid #ccc;
}

div.cart-summary div.subtotal {
  border-bottom: 1px solid {{ settings.link-color }};
  border-top: 1px solid {{ settings.link-color }};
  padding: 20px 15px;
  font-size: 1.4em;
  overflow: auto;
  margin-bottom: 1.3em;
}
div.cart-summary div.subtotal h3,
div.cart-summary div.subtotal h4 {
  font-weight: normal;
}
div.cart-summary div.subtotal h3 {
  float: left;
}
div.cart-summary div.subtotal h4 {
  float: right;
}

div.cart-summary button.payment-button {
  margin-right: 15px;
}

/* Cart Page - Is this a gift? */
div #isGift {
	font-size: 12px;
	color: rgb(44, 27, 16);
	padding-left: 20px;
	padding-bottom: 10px;
}

div #isGift input {
	margin-left: 5px;
}

div #isGift p {
	margin-top: 2px;
  color: {{ settings.meta-color }};
}

.hide {
  visibility: hidden;
}

.cart-header {
    position: absolute;
    right: 0;
    top: 25px;
    text-align: right;
}

.cart-header h2{
  margin-bottom: 0;
    font-size: 30px;
    color: #555555;
}

.cart-header p {
  margin-top: 0;
    font-size: 24px;
    line-height: 1;
}

/* ------ media queries ------ */

@media (max-width: 600px) {

  .cart-header {display:none;}

  #cart h1 {
    text-align: center;
  }

  .main-content.container {
    padding-left: 10px;
    padding-right: 10px;
  }


  div#container section#cart {
    width: 300px;
  }

    div.coaster-set{
    margin: 0 0 30px 0px;
  }

  div#coaster-sets-column {
    width: 300px;
    float: left;
    overflow: auto;
  }

  #coaster-sets-column p {
    margin:0;
  }


  div.empty-coaster-set a {
    background: #e6e6e6;
    padding-top: 0px;
  }

  div.empty-coaster-set a span {
    border-top: 0;
  }
  
  div.empty-coaster-set h2.list {
    display: none;
  }

  button.btn { 
    float: none;
    width: 100%; 
  }

}