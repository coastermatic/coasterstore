div.internal-container {
	margin: 0 auto;
	width: {{ settings.theme_width }};
}

#select {
	min-height: 400px;
	padding-bottom: 2.5em;
}

#select ul li {
	margin: 0 10px 12px; 
	display: inline; 
	float:left;
}

h1.loading, .loadingMore {
	color: #CCC; 
	clear:both;
	text-align: center;
}

img.remove {z-index: 10; display:none; cursor:pointer;}

.circle {
	position:relative;
}

.cm_picker {
	overflow: auto;
}

.drawer div#selection-container {
	padding-left: 210px;
}

h1#select-image-count span {
	color: {{ settings.link-color }};
}

div#image_content li,
div.shortlist_confirmed ul li,
div#shortlist_confirmed ul.circle li {
	-webkit-box-shadow: 0px 0px 10px 0px #666;
	-moz-box-shadow: 0px 0px 10px 0px #666;
	box-shadow: 0px 0px 10px 0px #666;
	width:160px;
	height:160px;
}

h1#select-image-count {
	margin: 100px 0 0 0;
	z-index: 100;
	text-align: center;
	position: absolute;
	width: 100%;
}

h1#select-image-count.select-image-count-mid-selection {
	margin: 75px 0 0 0;
	color: #aaa;
	width: 200px;
	right: 56px;
}

h1#select-image-count.select-image-count-mid-selection span {
	color: {{ settings.link-color }};
}


p#instagram-logged-in-as {
	margin: 200px 0 0 0;
	text-align: center;	
	line-height: 1.5;
	position: absolute;
	width: 100%;
	z-index:1;
	font-size: 14px;
	}

p#msg-border {
	margin: 155px 0 0 0;
	text-align: center;	
	line-height: 1.5;
	position: absolute;
	width: 100%;
	z-index:1;
}

p#msg-border a {
	margin: 2em 0 0 0;
	display: block;
}

p#msg-border span {
	display: inline-block;
	position: relative;
	text-indent: -999em;
	margin: 0 2px;
	width: 22px;
	height: 22px;
	background: url('img-coaster-selection-control-icons.png') -6px -76px no-repeat;
	top: -1px;
}

div#shortlist_container ul {
	overflow: auto;
	margin: 0 auto;
	/*width: 100%;*/
	width:1013px;
	padding: 10px;

